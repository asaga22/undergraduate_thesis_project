<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/white_rounded_corner"
        android:elevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/white_rounded_corner"
                android:elevation="15dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/toscagreen_rounded_left">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/dateRangeBI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="01-05 JAN 2020"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mregular"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/tourIdBI"
                            android:layout_below="@id/dateRangeBI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID: 12345678"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mregular"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:background="@drawable/white_rounded_right"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tourTitleBI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5D4N FASILKOM ESA UNGGUL OUTING"
                        android:textColor="@color/defaultGrey"
                        android:fontFamily="@font/mregular"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>
    </RelativeLayout>