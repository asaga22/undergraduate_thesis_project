<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_corner"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/closeDialogRepPaxList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_grey"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/modalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Represented Participant"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"
                android:textStyle="bold"
                android:layout_below="@id/closeDialogRepPaxList"/>
            <View
                android:layout_below="@id/modalTitle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/softGrey"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/descRepPaxList"
            android:layout_below="@id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/mmedium"
            android:textSize="16sp"
            android:layout_marginStart="8px"
            android:layout_marginEnd="8px"/>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@id/descRepPaxList">

           <TextView
               android:id="@+id/repPaxList"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textAlignment="textStart"
               android:padding="20dp"
               android:textColor="@color/black"
               android:fontFamily="@font/mregular"
               android:textSize="14sp"/>
       </ScrollView>

    </RelativeLayout>

</RelativeLayout>
