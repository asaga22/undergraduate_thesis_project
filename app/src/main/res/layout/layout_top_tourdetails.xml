<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:background="@drawable/gradient_blue_header_bg">

            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/backArrowInTourDetails"
                        android:src="@drawable/ic_backarrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Details"
                        android:textSize="18sp"
                        android:fontFamily="@font/mregular"
                        android:textColor="@color/white"
                        android:layout_marginStart="5dp"
                        android:id="@+id/options"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tourTitleInTourDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5D4N Fasilkom Tour to Lombok"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/topbar"
                    android:fontFamily="@font/mregular"/>

                <ImageView
                    android:id="@+id/dots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_yellow_ellipsies"
                    android:layout_below="@id/tourTitleInTourDetails"/>

                <TextView
                    android:id="@+id/tourIdInTourDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOUR ID GT123456"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/mlight"
                    android:textStyle="bold"
                    android:layout_below="@id/dots"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_one_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_corner"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:layout_below="@id/tourIdInTourDetails"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/statusTourInTourDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ongoing Tour"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/mmedium"
                            android:textSize="12sp"
                            android:textColor="@color/blueSecondary"/>

                       <LinearLayout
                           android:id="@+id/dateRangeInTourDetails"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_below="@+id/statusTourInTourDetails"
                           android:gravity="center"
                           android:layout_marginBottom="20dp">
                           <TextView
                               android:id="@+id/startDateInTourDetails"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="12 AUG 2020"/>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="@color/softGrey"
                               android:layout_marginRight="10dp"
                               android:layout_marginLeft="10dp"/>
                           <TextView
                               android:id="@+id/endDateInTourDetails"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="12 AUG 2020"/>
                       </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="90"
                            android:layout_below="@id/dateRangeInTourDetails"
                            android:layout_marginBottom="20dp">

                            <RelativeLayout
                                android:id="@+id/itineraryInTourDetails"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_weight="30"
                                android:background="@drawable/soft_blue_rectanngle_rounded_corner"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Itinerary"
                                    android:drawableTop="@drawable/ic_itinerary"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/discussionInTourDetails"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_weight="30"
                                android:background="@drawable/soft_blue_rectanngle_rounded_corner"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Discussion"
                                    android:drawableTop="@drawable/ic_chat"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/participantsInTourDetails"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_weight="30"
                                android:background="@drawable/soft_blue_rectanngle_rounded_corner"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Partcipants"
                                    android:drawableTop="@drawable/ic_group"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>
                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">
        <ProgressBar
            android:id="@+id/progressBarTourDetails"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/lightGrey"/>

        <TextView
            android:id="@+id/pleaseWaitTourDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait.."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</merge>
